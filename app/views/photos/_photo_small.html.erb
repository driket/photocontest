<div class="col-xs-2 photo-display text-center">
	<div class="photo-title">
		<h4 class="discreet"><small><%= truncate photo.title, :length => 20 %></small></h4>
	</div>
	<div class="photo-frame">
		<a href="<%= photo.image.url %>" rel="lightbox[]" title="<%= photo.title %>">
			<%= image_tag photo.image.url(:thumb), :class => "img-responsive" %>
		</a>
	</div>
	<%= simple_format truncate photo.description, :length => 128 %><br />
	<%= link_to 'J\'aime', "", :class => "btn-sm btn-default" %>
</div>