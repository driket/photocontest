<div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 photo-display small-frame text-center">
	<div class="photo-frame">
		<a href="<%= photo.image.url %>" rel="lightbox[]" title="<%= photo.title %>">
			<%= image_tag photo.image.url(:medium), :class => "img-responsive thumbnail" %>
		</a>
	</div>
	<p class="text-center">
		<% if photo.is_voted_by_user?(session[:cas_user])%>
		<%= link_to "je n'aime plus", photo_path(photo) + '/unvote', :class => "btn-sm btn-primary text-left like-button" %>
		<% else %>
		<%= link_to "j'aime", photo_path(photo) + '/vote', :class => "btn-sm btn-default text-left like-button" %>
		<% end %>
		<img src="/assets/ajax-loader.gif" class="ajax-loader" style="display:none;" />
		<img class="photo-infos-popover text-right" rel="popover" data-original-title="<%= photo.title %>" data-content="<%= photo.description %>" src="/assets/info_button.png" />
		</a>
	</p>
</div>