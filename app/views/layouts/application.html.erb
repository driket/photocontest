<!DOCTYPE html>
<html>
<head>
  <title>PhotoContest</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
  <!-- Fixed navbar -->
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/contests">Concours Photo LORIA</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/contests">Accueil</a></li>
					<% if is_connected? %>
						<%= render :partial => 'contests/navbar_list' %>
					<% end %>
					<% if is_admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administrer <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li class="dropdown-header">Nav header</li>
              <li><a href="#">Separated link</a></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
					<% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
				<% if session[:cas_user] %>
	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Bienvenue <%= connected_user.cn %> <b class="caret"></b></a>
	          <ul class="dropdown-menu">
							<li><%= link_to "se dÃ©connecter", '/contests/logout' %></li>
	          </ul>
	        </li>
				<% else %>
					<li><%= link_to "se connecter (CAS)", '/contests/login' %></li>
				<% end %>	
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
	
  <div class="container">

		<% if notice %>
		<div class="alert alert-info"><%= notice %></div>
		<% end %>
		<% if alert %>
		<div class="alert alert-danger"><%= alert %></div>
		<% end %>
		
		<!-- Main component for a primary marketing message or call to action -->
	 	<%= yield %>

    <div class="footer">
      <p><img src="/assets/logo_loria_small.jpg"></p>
    </div>
		
  </div> <!-- /container -->


</body>
</html>
