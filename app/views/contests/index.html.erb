 <% if @open_contests.size > 0 %>
 <div class="jumbotron">
 	<% @open_contests.each do |contest| %>
 	<h1><%= contest.title %></h1>
 	<img src="/assets/cameralens400.png" class="img-responsive" />
   <p class="lead"><%= contest.description %></p>
   <h4 class="text-center text-danger">Termine dans <%= distance_of_time_in_words_to_now contest.date_end %></h4>
   <p class="text-center"><%= link_to contest.action_title, contest, :class => 'btn btn-lg btn-primary' %>
 	<% end %>
 </div>
 <% else%>
 	<h5 class="text-center discreet">Il n'y a pas de concours ouvert actuellement.<h5>
 <% end %>

 <% if @on_vote_contests.size > 0 %>
 <div class="jumbotron">
 	<% @on_vote_contests.each do |contest| %>
 	<h1><%= contest.title %></h1>
 	<img src="/assets/cameralens400.png" class="img-responsive" />
 	<p class="text-center"><%= contest.description %></p>
 	<h4 class="text-center text-danger">Termine dans <%= distance_of_time_in_words_to_now contest.date_end %></h4>
 	<p class="text-center"><%= link_to contest.vote_action_title, contest, :class => 'btn btn-lg btn-primary' %>
 	<% end %>
 </div>
 <% end %>

 <% if @open_contests.size == 0 and @on_vote_contests.size == 0 %>
 	<h5 class="text-center discreet">Il n'y a pas de concours ouvert actuellement.<h5>
 <% end %>

