<div class="jumbotron">
   <h1><%= Settings.app_jumbotron_title %></h1>
	<img src="/assets/cameralens400.png" class="img-responsive" />
   <p class="lead"><%= raw Settings.app_jumbotron_description %></p>
 </div>
<% end %>
